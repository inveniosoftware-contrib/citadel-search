      "type": "object",
      "properties": {
        "owner":{
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "read":{
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "update":{
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "delete":{
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "_data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
